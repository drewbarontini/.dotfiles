{
  // ----------------------------------
  // The "Night Owl" theme!
  // ----------------------------------
  "editor.fontFamily": "Operator Mono",
  "editor.fontSize": 14,
  "editor.lineHeight": 26,
  "terminal.integrated.fontFamily": "Operator Mono",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.lineHeight": 1.5,
  "workbench.colorTheme": "Night Owl",
  "vim.easymotionMarkerFontFamily": "Operator Mono",
  "vim.easymotionMarkerHeight": 26,
  // ----------------------------------
  "bracketPairColorizer.forceIterationColorCycle": true,
  "breadcrumbs.enabled": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "editor.cursorSmoothCaretAnimation": true,
  "editor.cursorStyle": "line",
  "editor.cursorWidth": 1,
  "editor.fontLigatures": true,
  "editor.formatOnSave": true,
  "editor.lineNumbers": "relative",
  "editor.minimap.enabled": false,
  "editor.rulers": [
    80
  ],
  "editor.renderIndentGuides": true,
  "editor.smoothScrolling": true,
  "editor.snippetSuggestions": "top",
  "editor.suggestSelection": "first",
  "editor.tabCompletion": "onlySnippets",
  "editor.tabSize": 2,
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": "comment",
        "settings": {
          "fontStyle": "italic"
        }
      },
      {
        "scope": "entity.other.attribute-name",
        "settings": {
          "fontStyle": "italic"
        }
      }
    ]
  },
  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  },
  "emmet.triggerExpansionOnTab": true,
  "explorer.autoReveal": false,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.openEditors.visible": 0,
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/.sass-cache": true,
    "**/.bundle": true
  },
  "files.insertFinalNewline": false,
  "files.trimFinalNewlines": true,
  "flow.useNPMPackagedFlow": true,
  "git.allowForcePush": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "git.inputValidation": "warn",
  "git.rebaseWhenSync": true,
  "javascript.updateImportsOnFileMove.enabled": "never",
  "javascript.validate.enable": false,
  "markdown-preview-enhanced.previewTheme": "newsprint.css",
  "prettier.disableLanguages": [],
  "prettier.singleQuote": true,
  "prettier.trailingComma": "es5",
  "sync.askGistName": false,
  "sync.autoDownload": false,
  "sync.autoUpload": false,
  "sync.forceDownload": false,
  "sync.gist": "674f0187c2013d915b4b55cf65bc9a5f",
  "sync.quietSync": false,
  "sync.removeExtensions": true,
  "sync.syncExtensions": true,
  "terminal.external.osxExec": "iTerm.app",
  "terminal.explorerKind": "external",
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.fontWeightBold": "normal",
  "terminal.integrated.shellArgs.osx": [
    "-l"
  ],
  "terminal.integrated.shell.osx": "/bin/zsh",
  "vim.easymotion": true,
  "vim.hlsearch": true,
  "vim.leader": "<space>",
  "vim.mouseSelectionGoesIntoVisualMode": false,
  // https://code.visualstudio.com/docs/getstarted/keybindings
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": [
        ":"
      ],
      "after": [],
      "commands": [
        {
          "command": "workbench.action.showCommands",
          "args": []
        }
      ]
    },
    {
      "before": [
        "leader",
        "s"
      ],
      "after": [],
      "commands": [
        {
          "command": ":noh1",
          "args": []
        }
      ]
    },
    {
      "before": [
        "leader",
        "v"
      ],
      "after": [],
      "commands": [
        {
          "command": "workbench.action.splitEditor",
          "args": []
        }
      ]
    },
    {
      "before": [
        "leader",
        "h"
      ],
      "after": [],
      "commands": [
        {
          "command": "workbench.action.splitEditorDown",
          "args": []
        }
      ]
    },
    //-- A fix for `"editor.smoothScrolling": true` breaking `<C-u>`
    //   and `<C-d>` in Vim mode.
    {
      "before": [
        "<C-u>"
      ],
      "after": [
        "2",
        "0",
        "k"
      ]
    },
    {
      "before": [
        "<C-d>"
      ],
      "after": [
        "2",
        "0",
        "j"
      ]
    }
    // --
  ],
  "vim.overrideCopy": false,
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  // https://code.visualstudio.com/docs/getstarted/theme-color-reference
  "workbench.colorCustomizations": {
    "[Cobalt2]": {
      "editorGutter.background": "#ff00"
    },
    "[Night Owl]": {
      "activityBar.background": "#000C1D",
      "activityBar.border": "#102a44",
      "editorCursor.foreground": "#ffd800",
      "sideBar.background": "#001122",
      "sideBar.border": "#102a44",
      "sideBar.foreground": "#8BADC1"
    },
    "[Plastic - deprioritised punctuation]": {
      "panelTitle.activeBorder": "#ffffff",
      "titleBar.border": "#080a0f",
      "terminal.ansiBrightBlue": "#19b9c4",
      "terminal.ansiBrightGreen": "#8cc567",
      "terminal.ansiBrightRed": "#f16372",
      "terminal.ansiWhite": "#d1d6dc"
    },
    "[Plastic]": {
      "panelTitle.activeBorder": "#ffffff",
      "titleBar.border": "#080a0f",
      "terminal.ansiBrightBlue": "#19b9c4",
      "terminal.ansiBrightGreen": "#8cc567",
      "terminal.ansiBrightRed": "#f16372",
      "terminal.ansiWhite": "#d1d6dc"
    }
    // Changing the bar color
    // "activityBar.background": "#fbc02d",
    // "activityBar.foreground": "#FFF",
    // "activityBar.inactiveForeground": "#FFF",
    // "titleBar.activeBackground": "#fbc02d",
    // "titleBar.activeForeground": "#111"
    // "statusBar.background": "#fbc02d",
    // "statusBar.foreground": "#111"
  },
  "window.clickThroughInactive": false,
  "workbench.activityBar.visible": false,
  "workbench.editor.tabSizing": "shrink",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.list.automaticKeyboardNavigation": false,
  "workbench.sideBar.location": "left",
  "workbench.startupEditor": "newUntitledFile",
  "window.zoomLevel": 0
}