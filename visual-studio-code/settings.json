{
  // ---------------------------------------------------------------------------
  // Theme - Dank Mono
  // ---------------------------------------------------------------------------
  // "editor.fontFamily": "Dank Mono",
  // "editor.fontSize": 14,
  // "editor.lineHeight": 26,
  // "terminal.integrated.fontFamily": "Dank Mono",
  // "terminal.integrated.lineHeight": 1.5,
  // "terminal.integrated.fontSize": 14,
  // ---------------------------------------------------------------------------
  // Theme - MonoLisa
  // ---------------------------------------------------------------------------
  // "editor.fontFamily": "MonoLisa",
  // "editor.fontSize": 12,
  // "editor.lineHeight": 26,
  // "terminal.integrated.fontFamily": "MonoLisa",
  // "terminal.integrated.lineHeight": 1.5,
  // "terminal.integrated.fontSize": 12,
  // ---------------------------------------------------------------------------
  // Theme - Operator Mono
  // ---------------------------------------------------------------------------
  "editor.fontFamily": "Operator Mono",
  "editor.fontSize": 14,
  "editor.lineHeight": 26,
  "terminal.integrated.fontFamily": "Operator Mono",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.lineHeight": 1.5,
  // ---------------------------------------------------------------------------
  // Theme - Source Code Pro
  // ---------------------------------------------------------------------------
  // "editor.fontFamily": "Source Code Pro",
  // "editor.fontSize": 13,
  // "editor.lineHeight": 26,
  // "terminal.integrated.fontFamily": "Source Code Pro",
  // "terminal.integrated.fontSize": 13,
  // "terminal.integrated.lineHeight": 1.5,
  // ---------------------------------------------------------------------------
  "bracketPairColorizer.forceIterationColorCycle": true,
  "breadcrumbs.enabled": true,
  // ---------------------------------------------------------------------------
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "editor.cursorSmoothCaretAnimation": true,
  "editor.cursorStyle": "line",
  "editor.cursorWidth": 1,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.fontLigatures": true,
  "editor.formatOnSave": true,
  "editor.lineNumbers": "relative",
  "editor.minimap.enabled": false,
  "editor.rulers": [80],
  "editor.renderIndentGuides": true,
  "editor.smoothScrolling": true,
  "editor.snippetSuggestions": "top",
  "editor.suggestSelection": "first",
  "editor.tabCompletion": "onlySnippets",
  "editor.tabSize": 2,
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": "comment",
        "settings": {
          "fontStyle": "italic"
        }
      },
      {
        "scope": "entity.other.attribute-name",
        "settings": {
          "fontStyle": "italic"
        }
      }
    ]
  },
  // ---------------------------------------------------------------------------
  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  },
  "emmet.triggerExpansionOnTab": true,
  // ---------------------------------------------------------------------------
  "explorer.autoReveal": false,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.openEditors.visible": 0,
  // ---------------------------------------------------------------------------
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/.sass-cache": true,
    "**/.bundle": true
  },
  "files.insertFinalNewline": false,
  "files.trimFinalNewlines": true,
  "flow.useNPMPackagedFlow": true,
  // ---------------------------------------------------------------------------
  "git.allowForcePush": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "git.inputValidation": "warn",
  "git.rebaseWhenSync": true,
  // ---------------------------------------------------------------------------
  "javascript.updateImportsOnFileMove.enabled": "never",
  "javascript.validate.enable": false,
  // ---------------------------------------------------------------------------
  "markdown-preview-enhanced.previewTheme": "newsprint.css",
  // ---------------------------------------------------------------------------
  "prettier.singleQuote": true,
  "prettier.trailingComma": "es5",
  // ---------------------------------------------------------------------------
  "python.languageServer": "Microsoft",
  // ---------------------------------------------------------------------------
  "sync.autoDownload": false,
  "sync.autoUpload": false,
  "sync.forceDownload": false,
  "sync.gist": "674f0187c2013d915b4b55cf65bc9a5f",
  "sync.quietSync": false,
  "sync.removeExtensions": true,
  "sync.syncExtensions": true,
  // ---------------------------------------------------------------------------
  "terminal.external.osxExec": "iTerm.app",
  "terminal.explorerKind": "external",
  "terminal.integrated.experimentalLinkProvider": false,
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.fontWeightBold": "normal",
  "terminal.integrated.shellArgs.osx": ["-l"],
  "terminal.integrated.shell.osx": "/bin/zsh",
  // ---------------------------------------------------------------------------
  "typescript.updateImportsOnFileMove.enabled": "always",
  // ---------------------------------------------------------------------------
  "vim.easymotion": true,
  "vim.hlsearch": true,
  "vim.leader": "<space>",
  "vim.mouseSelectionGoesIntoVisualMode": false,
  // https://code.visualstudio.com/docs/getstarted/keybindings
  "vim.insertModeKeyBindingsNonRecursive": [
    {
      "before": ["cmd+s"],
      "commands": [
        { "command": "workbench.action.files.save" },
        { "command": "extension.vim_escape" }
      ]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": [":"],
      "after": [],
      "commands": [
        {
          "command": "workbench.action.showCommands",
          "args": []
        }
      ]
    },
    {
      "before": ["leader", "s"],
      "after": [],
      "commands": [
        {
          "command": ":noh1",
          "args": []
        }
      ]
    },
    {
      "before": ["leader", "v"],
      "after": [],
      "commands": [
        {
          "command": "workbench.action.splitEditor",
          "args": []
        }
      ]
    },
    {
      "before": ["leader", "h"],
      "after": [],
      "commands": [
        {
          "command": "workbench.action.splitEditorDown",
          "args": []
        }
      ]
    },
    //-- A fix for `"editor.smoothScrolling": true` breaking `<C-u>`
    //   and `<C-d>` in Vim mode.
    {
      "before": ["<C-u>"],
      "after": ["2", "0", "k"]
    },
    {
      "before": ["<C-d>"],
      "after": ["2", "0", "j"]
    }
    // --
  ],
  "vim.overrideCopy": false,
  // ---------------------------------------------------------------------------
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  // ---------------------------------------------------------------------------
  "window.clickThroughInactive": false,
  "window.zoomLevel": 0,
  // ---------------------------------------------------------------------------
  // https://code.visualstudio.com/docs/getstarted/theme-color-reference
  "workbench.colorCustomizations": {
    "[GitHub Dark Default]": {
      "terminal.ansiBrightBlack": "#5f666d"
    },
    "[Night Owl]": {
      "activityBar.background": "#000C1D",
      "activityBar.border": "#102a44",
      "editorCursor.foreground": "#ffd800",
      "sideBar.background": "#001122",
      "sideBar.border": "#102a44",
      "sideBar.foreground": "#8BADC1"
    }
    // Changing the bar color
    // "activityBar.background": "#fbc02d",
    // "activityBar.foreground": "#FFF",
    // "activityBar.inactiveForeground": "#FFF",
    // "titleBar.activeBackground": "#fbc02d",
    // "titleBar.activeForeground": "#111"
    // "statusBar.background": "#fbc02d",
    // "statusBar.foreground": "#111"
  },
  "workbench.activityBar.visible": true,
  "workbench.colorTheme": "GitHub Dark Default",
  "workbench.editor.limit.enabled": true,
  "workbench.editor.limit.value": 4,
  "workbench.editor.showTabs": true,
  "workbench.editor.tabSizing": "shrink",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.list.automaticKeyboardNavigation": false,
  "workbench.panel.defaultLocation": "left",
  "workbench.sideBar.location": "right",
  "workbench.startupEditor": "newUntitledFile",
  "workbench.statusBar.visible": true
}
